#include<stdio.h>
#include <stdlib.h>
int main (void)
{
    int number;
    int *a;
    int i;
    printf("输入数量：");
    scanf("%d",&number);
    a=(int*)malloc(number*sizeof(int));//指针真正用来储存的空间
    for(i=0;i<number;i++)
    {
        scanf("%d",&a[i]);
    }
    for (i=number-1;i>=0;i--)
    {
        printf("%d",a[i]);
    }
    free(a);//释放内存
    return 0;
}
