#include <stdio.h>//逆序数
int main()
{
    int x;
    scanf("%d",&x);
    printf("%d\n",x);
    int num;
    int ret=0;
    while(x>0){//当没有余数跳出循环
        num = x%10;//x取余得出num并输出
        printf("%d\n",num);
        ret=ret*10+num;//不断把逆数扩大最终达成逆序数
        printf("x=%d num=%d ret=%d\n",x,num,ret);  
        x/=10;//缩小十倍重复
    }    
    printf("%d\n",ret);
    return 0;
}

//如是700处理方法为注释掉下面的printf
#include <stdio.h>//逆序数
int main()
{
    int x;
    //scanf("%d",&x);
    x=700;
    //printf("%d\n",x);
    int num;
    int ret=0;
    while(x>0){//当没有余数跳出循环
        num = x%10;//x取余得出num并输出
        printf("%d",num);
        ret=ret*10+num;//不断把逆数扩大最终达成逆序数
        //printf("x=%d num=%d ret=%d\n",x,num,ret);  
        x/=10;//缩小十倍重复
    }    
    //printf("%d\n",ret);
    return 0;
}
