#include <stdio.h>
int main()
{
    int a,b;
    int min;
    scanf("%d %d",&a,&b);
    if(a<b){
        min = a;
    }else{
        min =b;
    }
    int i;
    int ret =0;
    for (i=1;i<=min;i++){
        if(a%i==0){
            if (b%i ==0)
            {
                ret=i;
            }
            
        }
    }printf("最大公约数是=%d",ret);
}
//如果b等于0，计算结束，a就是最大公约数；
//否则，计算a除以b的余数，让a等于b，而b等于那个余数；
回到第一步；
a   b   t
12  18  12
18  12  6
12  6   0
6   0
代码如下
#include <stdio.h>
int main()
{
    int a,b;
    scanf("%d %d",&a,&b);
    int t=0;
    if(b>0){//b!=0也行
        t=a%b;
        a=b;
        b=t;
        printf("a=%d,b=%d,t=%d",a,b,t);
    }
    printf("最大公约数是=%d",b);
    return 0;
}
