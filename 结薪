#include <stdio.h>

int main()
{
const double RATE = 8.25;//const限定变量不允许被改变，静态作用
const int STANDARD = 8;//工作加薪届点
double pay = 0.0;
int hours;

printf("请输入小时数:");
scanf("%d",&hours);
printf("\n");
if (hours> STANDARD)
    pay = STANDARD*RATE+(hours-STANDARD)*(RATE*1.5);
else
    pay = hours * RATE;
printf("应付工资:%f\n",pay);//判断工作时长，采用不同结薪方式
return 0;
}
